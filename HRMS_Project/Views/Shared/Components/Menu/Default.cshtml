@model HRMS_Project.Models.MenuItem.MenuItemViewModel



<a class="sidebar-brand d-flex align-items-center justify-content-center" asp-controller="Demo" asp-action="index">
    <div class="sidebar-brand-icon rotate-n-15">
        <i class="fas fa-laugh-wink"></i>
    </div>
    <div class="sidebar-brand-text mx-3">@Model.name_side_menu <sup>2</sup></div>
</a>


@if (Model.detail_sideMenu.Count > 0)
{
    Model.detail_sideMenu.Count();
    foreach (var item in Model.detail_sideMenu)
    {
        if (item.detail_sideMenu_node.Count > 1)
        {

            //have node
            <hr class="sidebar-divider">
            <div class="sidebar-heading">
                Request
            </div>

            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUtilities" aria-expanded="true" aria-controls="collapseUtilities">
                    <i class="fas fa-fw fa-wrench"></i>
                    <span>@item.Name</span>
                </a>
                <div id="collapseUtilities" class="collapse" aria-labelledby="headingUtilities" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Custom Utilities:</h6>

                        @foreach (var item2 in item.detail_sideMenu_node)
                        {
                            <a class="collapse-item" asp-controller="@item2.ControlName" asp-action="@item2.ActionName">@item2.Name</a>                                     
                        }
                    </div>
                </div>
            </li>

        }
        else
        {                                     
            //not have node

            <hr class="sidebar-divider my-0">

            <div class="sidebar-heading">
                @item.Name
            </div>
            <li class="nav-item active">
                <a class="nav-link" asp-controller="@item.detail_sideMenu_node[0].ControlName" asp-action="@item.detail_sideMenu_node[0].ActionName">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>@item.detail_sideMenu_node[0].Name</span>
                </a>
            </li>
        }
    }
}


